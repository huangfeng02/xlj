page {
    background: #fbd152
}

.themeList {
    padding: 35rpx
}
.themeList navigator{
   margin-bottom: 35rpx;
}

.themeList .themeItem {
    -webkit-border-radius: 30rpx;
    -moz-border-radius: 30rpx;
    border-radius: 30rpx;
    overflow: hidden;
}
.themeList .main {
    background: #fff;
    padding: 30rpx;
}

.themeList .themeItem .imgCover {
    width: 100%;
    height: 470rpx;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    vertical-align: bottom;
    overflow: hidden;
}
.themeCover {
    width: 100%;
}

.themeList .themeItem .icon {
    width: 25rpx;
    height: 25rpx;
}
.themeList .themeItem .captain {
    height: 70rpx; line-height: 70rpx;
}

.themeList .themeItem .portrait {
    width: 70rpx;
    height: 70rpx;
    -webkit-border-radius: 35rpx;
    -moz-border-radius: 35rpx;
    border-radius: 35rpx;
    float: left;
}

.themeList .themeItem .captain_name {
    font-size: 30rpx;margin-left: 10rpx;
}
.themeList .themeItem .captain_price {
   color: #fbd152;
}
.themeList .themeItem .date {
   font-size: 30rpx;padding: 10rpx 0;
}
.themeList .themeItem .days {
   margin-right: 50rpx;margin-left: 10rpx;
}
